<%--Kuzey Cimen - 1803189 - kc18182--%><jsp:useBean id='basket'             scope='session'             class='shop.Basket'/><%--Getting the parameter emptyBasket and addItem from the url.--%><%    String empty = request.getParameter("emptyBasket");    if (empty != null) {        basket.clearBasket();    }    String item = request.getParameter("addItem");    basket.addItem(item);%><html><head>    <title>Basket</title>    <%--CSS link.--%>    <link rel="stylesheet" type="text/css" href="css/1803189_style.css"></head><body><jsp:include page="header.jsp"/><div id="main">    <%--If there are items in the basket.--%>    <% if (basket.getTotal() > 0) { %>    <%--Include the basketTable jsp to show the basket as a table.--%>    <jsp:include page="basketTable.jsp"/>    <p> Order total = <%= basket.getTotalString() %></p>    <%--Form for Ordering--%>    <form action="order.jsp" method="post">        <input type="text" name="name" size="20" placeholder="Name" required>        <input type="submit" value="Place Order"/>    </form>    <%--Form for removing item.--%>    <form action="remove.jsp" method="get">        <input type="text" name="amount" size="20" placeholder="Amount" pattern="[0-9]+" required>        <input type="text" name="removeItem" size="20" placeholder="Title of Item" required>        <input type="submit" value="Remove Item"/>    </form>    <%--Form for emptying the basket.--%>    <form action="basket.jsp" method="get">        <input type="hidden" name="emptyBasket" value="yes">        <input type="submit" value="Empty Basket"/>    </form>    <%--If the basket is empty.--%>    <% } else { %>    <h2>Basket is empty.</h2>    <% } %>    <%--Button for going to the index page.--%>    <input type="button" value="Home" onclick="document.location = 'index.jsp'"/></div><%--Script for removing the parameter from the html so refreshing the page does not add the item again.--%><script>    var justURL = window.location.href.replace(window.location.search, '');    history.pushState({}, null, justURL);</script><jsp:include page="footer.jsp"/></body></html>